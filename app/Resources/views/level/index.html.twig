{% extends 'base.html.twig' %}

{% block body %}
    <h1>Levels list</h1>

    <table>
        <thead>
            <tr>
                <th>Item</th>
                <th>Createdat</th>
                <th>Createdby</th>
                <th>Updatedat</th>
                <th>Updatedby</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for level in levels %}
            <tr>
                <td><a href="{{ path('level_show', { 'id': level.id }) }}">{{ level.item }}</a></td>
                <td>{% if level.createdAt %}{{ level.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ level.createdBy }}</td>
                <td>{% if level.updatedAt %}{{ level.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ level.updatedBy }}</td>
                <td>{{ level.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('level_show', { 'id': level.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('level_edit', { 'id': level.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('level_new') }}">Create a new level</a>
        </li>
    </ul>
{% endblock %}
