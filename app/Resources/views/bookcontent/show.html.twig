{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bookcontent</h1>

    <table>
        <tbody>
            <tr>
                <th>Item</th>
                <td>{{ bookContent.item }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if bookContent.createdAt %}{{ bookContent.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if bookContent.updatedAt %}{{ bookContent.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ bookContent.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bookcontent_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bookcontent_edit', { 'id': bookContent.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
