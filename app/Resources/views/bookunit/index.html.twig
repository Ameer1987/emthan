{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bookunits list</h1>

    <table>
        <thead>
            <tr>
                <th>Item</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bookUnit in bookUnits %}
            <tr>
                <td><a href="{{ path('bookunit_show', { 'id': bookUnit.id }) }}">{{ bookUnit.item }}</a></td>
                <td>{% if bookUnit.createdAt %}{{ bookUnit.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if bookUnit.updatedAt %}{{ bookUnit.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ bookUnit.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('bookunit_show', { 'id': bookUnit.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('bookunit_edit', { 'id': bookUnit.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bookunit_new') }}">Create a new bookUnit</a>
        </li>
    </ul>
{% endblock %}
