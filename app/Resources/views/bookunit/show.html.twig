{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bookunit</h1>

    <table>
        <tbody>
            <tr>
                <th>Item</th>
                <td>{{ bookUnit.item }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if bookUnit.createdAt %}{{ bookUnit.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if bookUnit.updatedAt %}{{ bookUnit.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ bookUnit.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bookunit_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bookunit_edit', { 'id': bookUnit.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
