<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Book" table="book">
    <indexes>
      <index name="subject_id" columns="subject_id"/>
      <index name="responsibility_id" columns="responsibility_id"/>
      <index name="book_type_id" columns="book_type_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="item" type="string" column="item" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="price" type="string" column="price" length="11" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="color" type="string" column="color" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="pages" type="integer" column="pages" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="sentToPrintDate" type="datetime" column="sent_to_print_date" nullable="false"/>
    <field name="finishPrintDate" type="datetime" column="finish_print_date" nullable="false"/>
    <many-to-one field="subject" target-entity="Subject" fetch="LAZY">
      <join-columns>
        <join-column name="subject_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="responsibility" target-entity="Employee" fetch="LAZY">
      <join-columns>
        <join-column name="responsibility_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="bookType" target-entity="BookType" fetch="LAZY">
      <join-columns>
        <join-column name="book_type_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
