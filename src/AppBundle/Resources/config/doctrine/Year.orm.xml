<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="AppBundle\Entity\Year" table="year">
        <indexes>
            <index name="id" columns="id"/>
        </indexes>
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="item" type="string" column="item" length="15" nullable="false">
            <options>
                <option name="fixed"/>
            </options>
        </field>
        <field name="isDefault" type="boolean" column="is_default" nullable="false"/>
        <field name="createdAt" type="datetime" column="created_at" nullable="false"/>
        <field name="createdBy" type="integer" column="created_by" nullable="false">
            <options>
                <option name="unsigned"/>
            </options>
        </field>
        <field name="updatedAt" type="datetime" column="updated_at" nullable="false"/>
        <field name="updatedBy" type="integer" column="updated_by" nullable="false">
            <options>
                <option name="unsigned"/>
            </options>
        </field>
        <one-to-many field="terms" target-entity="Term" mapped-by="year">
            <order-by>
                <order-by-field name="item" direction="ASC" />
            </order-by>
        </one-to-many>
    </entity>
</doctrine-mapping>
